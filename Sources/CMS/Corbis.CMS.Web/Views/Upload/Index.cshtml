</style>
<script type="text/javascript">

    var swfVersionStr = "11.1.0";

    var xiSwfUrlStr = "playerProductInstall.swf";

    var params = {};

    var flashvars = {};
    flashvars.filterExtension = "*.jpg;*.jpeg;*.tif;*.tiff;*.png";
    flashvars.sizeLimitMax = "62914560";
    flashvars.sizeLimitMin = "1048576";
    flashvars.uploadURL = "http://localhost:62506/api/Upload/FileUpload";
    flashvars.greetingText = "max file size 60Mb min file size 1 mb \nplease press button for upload images";

    params.quality = "high";
    params.bgcolor = "#003300";
    params.allowscriptaccess = "sameDomain";
    params.allowfullscreen = "true";
    var attributes = {};
    attributes.id = "SimpleUploader";
    attributes.name = "SimpleUploader";
    attributes.align = "middle";
    swfobject.embedSWF(
                        "SimpleUploader.swf", "flashContent",
                        "700", "500",
                        swfVersionStr, xiSwfUrlStr,
                        flashvars, params, attributes);
    swfobject.createCSS("#flashContent", "display:block;text-align:left;");

    function callBackImageID(msg) {
        //alert(msg);
        return "OK";
    }
</script>
